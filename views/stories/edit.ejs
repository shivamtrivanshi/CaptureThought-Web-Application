<% include ../layouts/header %>
<main>
    <div class="container">

<h1>Edit Stories</h1>

<div class="row">
    <form action="/stories/<%= story.id %>?_method=PUT" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="<%= story.title %>" id="title" required>
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    <% if(story.status === "public"){ %>
                        <option value="public" selected>Public</option>
                        <option value="private">Private</option>
                        <option value="unpublished">Unpublished</option>
                    <% }else if(story.status === "private"){ %>
                        <option value="public">Public</option>
                        <option value="private" selected>Private</option>
                        <option value="unpublished">Unpublished</option>
                    <% }else{ %>
                        <option value="public">Public</option>
                        <option value="private">Private</option>
                        <option value="unpublished" selected>Unpublished</option>
                    <% } %>     
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <p>
                <input type="checkbox" name="allowComments" 
                class="filled-in" id="filled-in-box" <% if(story.allowComments === true){ %> checked="checked" <% } %> >
                <label for="filled-in-box">Allow Comments</label>
            </p>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story:</h5>
                <textarea name="body" required><%- story.body %></textarea>
            </div>
        </div>

        <input type="submit" value="Save" class="btn waves-effect">
    </form>
</div>

    </div>
</main>
<% include ../layouts/footer %>